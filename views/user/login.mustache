<html>
<head>
  {{>header}}
</head>
<body class="bg-white text-gray-800">
  
  <div class="container h-[1000px] py-12">
    <h1 class="text-3xl font-bold mb-6">{{title}}</h1>

    {{#error}}
      <div class="alert alert-danger" role="alert">
        {{error}}
      </div>
    {{/error}}

    <div id="formContent" class="max-w-md mx-auto">
      <form method="POST" action="/login{{#redirectTo}}?redirectTo={{redirectTo}}{{/redirectTo}}">
        <div class="form-group mb-4">
          <label for="email" class="block mb-2">Email address</label>
          <input type="email" class="form-control w-full p-2 border border-gray-300 rounded" name="email" required>
        </div>

        <div class="form-group mb-4">
          <label for="pass" class="block mb-2">Password</label>
          <input type="password" class="form-control w-full p-2 border border-gray-300 rounded" id="pass" name="pass" placeholder="Password" required>
        </div>

        <input type="submit" class="btn btn-primary mt-2 bg-green-600 text-white py-2 px-4 rounded hover:bg-green-700" value="Login">
      </form>
    </div>
  </div>

  {{> footer }}
</body>
</html>
