<html>
<head>{{>header}}</head>
<body class="container">
  <h1>{{title}}</h1>
  <form method="POST" action="/admin/add-workshop/{{courseId}}">
    <div class="form-group">
     <label for="topic">Workshop Topic</label>
        <input type="text" class="form-control" name="topic" id="topic" required>
    </div>
    <div class="form-group">
      <label>Date</label>
      <input type="date" name="date" class="form-control" required />
    </div>
    <div class="form-group">
      <label>Time</label>
      <input type="time" name="time" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Add Workshop</button>
  </form>
</body>
</html>
